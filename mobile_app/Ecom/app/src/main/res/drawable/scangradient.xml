<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="0dp"
        />
    <gradient
        android:gradientRadius="1000"
        android:centerX="50%"
        android:centerY="50%"
        android:centerColor="#a0a0a0"
        android:startColor="#E8E8E8"
        android:type="radial"
        />
    <padding
        android:left="10dp"
        android:right="10dp"

        />
    <stroke
        android:width="2dp"
        android:color="#888888"
        />
    </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="3dp"
                />
            <gradient
                android:gradientRadius="1000"
                android:centerX="50%"
                android:centerY="50%"
                android:centerColor="#EEEEEE"
                android:startColor="#E8E8E8"
                android:type="radial"
                />
            <padding
                android:left="10dp"
                android:right="10dp"

                />
            <stroke
                android:width="2dp"
                android:color="#888888"
                />
        </shape>
    </item>
</selector>